<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<includes>
				<include>${project.groupId}:${project.artifactId}</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>./etc</outputDirectory>
			<includes>
				<include>config.properties</include>
				<include>datasource.properties</include>
				<include>log4j2.xml</include>				
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/boot_sql</directory>
			<outputDirectory>./boot_sql</outputDirectory>
			<includes>
				<include>*.sql</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/upgrade_sql</directory>			
			<outputDirectory>./upgrade_sql</outputDirectory>			
			<includes>			
				<include>*/*.sql</include>
			</includes>
		</fileSet>		
		<fileSet>
			<directory>src/main/resources/init_sql</directory>
			<outputDirectory>./init_sql</outputDirectory>
			<includes>
				<include>*.sql</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/bin</directory>
			<outputDirectory>./bin</outputDirectory>
			<includes>
				<include>*.sh</include>							
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/install</directory>
			<outputDirectory>./install</outputDirectory>
			<includes>
				<include>*.sh</include>							
			</includes>
		</fileSet>
	</fileSets>
</assembly>